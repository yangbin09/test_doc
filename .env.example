# VitePress 部署流水线环境变量配置示例
# 请复制此文件为 .env 并填入实际值

# ==================== 构建配置 ====================
NODE_ENV=production
PNPM_REGISTRY=https://registry.npmmirror.com

# ==================== SSH连接配置 ====================
# 服务器连接信息（敏感信息，请从CI/CD密钥管理中获取）
SSH_HOSTNAME=8.134.100.191
SSH_USERNAME=root
SSH_PASSWORD=your_ssh_password_here
SSH_PORT=22
SSH_TIMEOUT=30

# ==================== 部署路径配置 ====================
REMOTE_WEB_DIR=/opt/1panel/apps/openresty/openresty/www/sites/sc_wynlx_cn/index
REMOTE_BACKUP_DIR=/var/backups/shici
LOCAL_DOCS_DIR=../docs
LOCAL_DIST_DIR=../docs/.vitepress/dist

# ==================== Nginx配置 ====================
NGINX_CONFIG_DIR=/etc/nginx/sites-available
NGINX_SITE_NAME=vitepress-docs
NGINX_DOMAIN=wynlx.cn

# ==================== 部署选项 ====================
MAX_RETRIES=3
BACKUP_RETENTION_DAYS=7
ENABLE_GZIP=true
ENABLE_CACHE_HEADERS=true
BUILD_COMMAND=pnpm run docs:build

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_DIR=logs

# ==================== 验证配置 ====================
# 部署后验证URL（可选）
VERIFY_URL=http://wynlx.cn
VERIFY_TIMEOUT=30

# ==================== 备份配置 ====================
# 是否启用自动备份
ENABLE_BACKUP=true
# 备份压缩格式
BACKUP_FORMAT=tar.gz
# 备份文件名前缀
BACKUP_PREFIX=vitepress-backup